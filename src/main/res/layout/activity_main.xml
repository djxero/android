<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#a32323"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="344dp"
            android:layout_height="27dp" tools:layout_editor_absoluteY="8dp" tools:layout_editor_absoluteX="8dp"
            android:id="@+id/linearLayout2">
        <TextView
                android:text="ΠΕΙΝΑΣΕΣ;"
                android:layout_width="0dp"
                android:layout_height="wrap_content" android:id="@+id/textView2"
                android:visibility="visible"
                android:textSize="15dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="101dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/linearLayout3">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/sintages" android:id="@+id/imageView4"
                android:layout_weight="1"
                android:scaleType="fitStart"
                android:adjustViewBounds="true"
                android:maxHeight="150sp"

        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText3" android:layout_weight="1" android:singleLine="false"
                android:selectAllOnFocus="false"
                android:gravity="left"
                android:text="Εδώ θα βρείτε πολύτιμες συνταγες για όλους ,και να κάνετε αναζήτηση βάση των κύριων υλικών αλλά και της συνολικής τιμής του κάθε πιάτου"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:fontFamily="sans-serif-condensed" android:typeface="normal" android:textSize="14sp"
                android:textColor="@android:color/black" android:textStyle="italic" android:textAlignment="viewStart"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="-3dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="32dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" app:srcCompat="@drawable/super1" android:id="@+id/imageView6"
                android:adjustViewBounds="true"
                android:scaleType="fitStart"
                android:layout_weight="1"
                android:maxHeight="120sp"

        />
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/editText4" android:layout_weight="1" android:singleLine="false"
                android:selectAllOnFocus="false"
                android:gravity="left"
                android:text=" Εδώ θα βρείτε τα κοντινά σας supermarkets,θα έχετε την δυνατότητα να δείτε καταλόγους με τα προίοντα που προσφέρουν αλλά και τις τιμές καθώς και τις προσφορές."
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:fontFamily="sans-serif-condensed" android:typeface="normal" android:textSize="14sp"
                android:textColor="@android:color/black" android:textStyle="italic" android:textAlignment="viewStart"
        />
    </LinearLayout>
    <TextView
            android:text="Εδω θα βρείς οτι χρειάζεσαι!!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="47dp"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:textStyle="italic" android:textAlignment="center" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>